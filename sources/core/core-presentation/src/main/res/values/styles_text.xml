<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="XTextLogo">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="XTextPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="XTTextSecondary" parent="XTextPrimary">
        <item name="android:alpha">0.6</item>
    </style>

    <style name="XTextButton" parent="XTextPrimary" />

    <style name="XTextCaption" parent="XTextPrimary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
